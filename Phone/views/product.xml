<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="product_form_view" model="ir.ui.view">
            <field name="name">product.phone.form.view</field>
            <field name="model">product.phone</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                            <field name="product_id" readonly="1"/>
                            </h1>

                        </div>

                            <group string="Name">
                                <field name="name" placeholder="..."/>
                                <field name="owner_id"/>
                            </group>

                            <group name="baohanh" string="Warranty">
                                <field name="BaoHanh"/>
                            </group>

                            <group name="thumua" string="Repurchase">
                                <field name="ThuMua"/>
                            </group>

                            <group>
                                <field name="basic_price"/>
                                <field name="bonus_price"/>
                                <field name="final_price"/>
                            </group>

                            <group name="Phone_image">
                                <field name="SoLuong"/>
                                <field name="TinhTrang"/>
                                <field name="TinhTrangMua"/>
                                <field name="TonKho"/>
                            </group>

                        <notebook>
                            <page name="general_information" string="General Information">
                                <group>

                                    <group>
                                        <field name="NhanHieu"/>
                                        <field name="ThoiLGBH"/>
                                    </group>

                                    <group>
                                        <field name="Qua_Tang" widget='one2many'>
                                            <tree editable="bottom">
                                                <field name="gift"/>
                                            </tree>
                                        </field>
                                    </group>

                                    <group>
                                        <field name="Chi_nhanh" widget='one2many'>
                                            <tree editable="bottom">
                                                <field name="branch"/>
                                            </tree>
                                        </field>
                                    </group>

                                </group>
                            </page>
                            <page name="additional_information" string="Additional Information">
                                <group>
                                    <group>
                                        <field name="Doituong_KH" widget='one2many'>
                                            <tree editable="bottom">
                                                <field name="customers"/>
                                            </tree>
                                        </field>
                                    </group>

                                    <group>
                                        <field name="NCC" widget='one2many'>
                                            <tree editable="bottom">
                                                <field name="suppliers"/>
                                            </tree>
                                        </field>
                                    </group>

                                    <group>
                                        <field name="PhuKien"/>
                                    </group>

                                </group>
                            </page>

                            <page name="additional_information" string="Related Products">
                                <group>
                                    <field name="product_ids"/>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_phone_tree_view" model="ir.ui.view">
            <field name="name">product.phone.tree.view</field>
            <field name="model">product.phone</field>
            <field name="arch" type="xml">
                <tree>
                <field name="product_id"/>
                <field name="name"/>
                <field name="SoLuong"/>
                <field name="TinhTrang"/>
                <field name="TinhTrangMua"/>
            </tree>
        </field>
    </record>

    <record id="action_product_phone" model="ir.actions.act_window">
        <field name="name">Phone</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.phone</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>create</p>
        </field>
    </record>

    <menuitem id="menu_product_phone"
              name="Product"
              action="action_product_phone"
              sequence="10"
              groups="base.group_user"/>

  </data>
</odoo>